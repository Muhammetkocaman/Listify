@model web_uyg.Models.AlisverisUrunu

@{
    ViewData["Title"] = "Ürün Ekle";
}

<div class="container">
    <h2>Yeni Ürün Ekle</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Ekle">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="UrunAdi" class="control-label"></label>
                    <input asp-for="UrunAdi" class="form-control" />
                    <span asp-validation-for="UrunAdi" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Miktar" class="control-label"></label>
                    <input asp-for="Miktar" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Miktar" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <div class="form-check">
                        <input asp-for="AlındiMi" class="form-check-input" />
                        <label asp-for="AlındiMi" class="form-check-label"></label>
                    </div>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
